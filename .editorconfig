# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false

# Windows files
[*.{bat}]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = sjis

# 2 space indentation
[*.{yml,js,json,rst,html,css,md,toml}]
indent_size = 2

# 4 space indentation
[*.{py}]
indent_size = 4

# Tab indentation (no size specified)
[Makefile,*.{cfg}]
indent_style = tab
